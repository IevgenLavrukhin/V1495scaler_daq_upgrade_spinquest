--*********************************************************************************
-- scal_vme_switch
-- Ethan Hazelton 
--  => Switch controls whether the scalar module is using the VMEBus(switch = '0') 
--     to control the scalar module or using the BOS and EOS signals(switch = '1')
--********************************************************************************
LIBRARY ieee;
USE ieee.std_logic_1164.all;
USE ieee.numeric_std.all;

entity scal_vme_switch is
  port (
    switch      : in  std_logic;
	 input_0     : in  std_logic;
	 input_1     : in  std_logic;
	 output      : out std_logic
    );
end scal_vme_switch;

architecture arch of scal_vme_switch is

	
begin

	switch_log: process(switch,input_0,input_1)
	begin
		if(switch = '0') then
			output <= input_0;
		elsif(switch = '1') then 
			output <= input_1;
		end if;
	end process switch_log;
 
end arch;